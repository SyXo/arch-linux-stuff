<menu id="root-menu" label="Openbox 3">

	<separator label="Menu" />

	<!-- Left here as an example of how to do a submenu
	<menu id="system-menu"/>
	-->

	<item label="Terminal">
		<action name="Execute">
			<command>konsole</command>
			<startupnotify>
	  			<enabled>yes</enabled>
			</startupnotify>
		</action>
	</item>

	<!--
	<separator />
	-->

	<item label="Openbox Config">
		<action name="Execute">
			<command>obconf</command>
			<startupnotify><enabled>yes</enabled></startupnotify>
		</action>
	</item>

	<item label="Cairo Config">
		<action name="Execute">
			<command>cairo-compmgr --configure</command>
			<startupnotify><enabled>yes</enabled></startupnotify>
		</action>
	</item>

	<item label="wBar Config">
		<action name="Execute">
			<command>wbar-config</command>
			<startupnotify><enabled>yes</enabled></startupnotify>
		</action>
	</item>

	<item label="GTK Config">
		<action name="Execute">
			<command>lxappearance</command>
			<startupnotify><enabled>yes</enabled></startupnotify>
		</action>
	</item>

	<item label="qT5 Config">
		<action name="Execute">
			<command>qt5ct</command>
			<startupnotify><enabled>yes</enabled></startupnotify>
		</action>
	</item>

	<item label="Refresh Openbox">
		<action name="Reconfigure" />
	</item>

	<item label="Reboot">
		<action name="Execute">
			<prompt>Reboot right now?</prompt>
			<command>reboot</command>
		</action>
	</item>

	<item label="Log Out">
		<action name="Exit">
			<prompt>yes</prompt>
		</action>
	</item>

</menu>

</openbox_menu>
